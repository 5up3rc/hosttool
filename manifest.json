{
  "name": "hosttool",
  "short_name": "hosttool",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A pretty chrome extension for altering host headers.",
  "homepage_url": "https://not.the.sameorig.in/",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "assets/icons/icon128.png",
    "default_title": "hosttool",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "scripts": ["src/hosttool/hosttool.js"]
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
